csvspec: {
  name: "test_required_field_value"
  filename: "test_required_field_value.txt"

  column: {
    name: "float_std_optional_test"
    type: { type: FLOAT_STD }
    }

  column: {
    name: "float_std_required_test"
    type: { type: FLOAT_STD }
    value_required: true
    }

  column: {
      name: "int_dec_optional_test"
      type: { type: INT_DEC }
    }

  column: {
    name: "int_dec_required_test"
    type: { type: INT_DEC }
    value_required: true
    }

  column: {
    name: "int_hex_optional_test"
    type: { type: INT_HEX }
    }

  column: {
      name: "int_hex_required_test"
      type: { type: INT_HEX }
      matchregexp: "[0-9a-fA-F]{6}"
      value_required: true
    }

  column: {
      name: "unspecified_optional_test"
    }

    column: {
      name: "unspecified_required_test"
      value_required: true
    }

  column: {
      name: "string_optional_test"
      type: { type: STRING }
    }

    column: {
      name: "string_required_test"
      type: { type: STRING }
      value_required: true
    }
}